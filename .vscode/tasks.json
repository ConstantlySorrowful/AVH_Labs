{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "./scripts/bld300.sh"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./scripts/run300.sh"
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "./scripts/bld300.sh",
            "args":[
                "-c"
            ]
        },
        {
            "label": "git-clean",
            "type": "shell",
            "command": "git",
            "args":[
                "clean",
                "-d",
                "-f",
                "-x"
            ]
        },
    ]
}